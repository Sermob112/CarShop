@model CarShop.Domain.ViewModels.Place.PlaceViewModel
@{
    var textTitle = Model?.id == 0 ? "Изменение данных" : "Добавление данных";
}

<form asp-controller="Place" asp-action="Save" enctype="multipart/form-data" id="formSaveCar">
    <input asp-for="id" hidden />
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.id" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.id">
        </div>
      
        <div class="form-group col-md-4">
            <label asp-for="@Model.price" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.price" />
        </div>
    </div>
</form>

<script src="~/lib/select2/js/select2.full.min.js"></script>
<script>
   $('#id').select2({
      placeholder: "Выберите тип",
      minimumInputLength: 0,
      allowClear: true,
      ajax: {
           type: "POST",
           url: "@Url.Action("GetPlaces", "Place")",
           dataType: "json",
           processResults: function (result) {
               return {
                   results: $.map(result, function (val, index) {
                       return {
                           id: index, 
                           text: val
                       };
                   }),
               };
           }
       }
   });
</script>

<style>
    label {
        color: black;
    }
</style>